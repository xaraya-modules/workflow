<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
  <div style="overflow: hidden">
    <script type="module">
      import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
      mermaid.initialize({ startOnLoad: true });
    </script>
    <xar:if condition="!empty($subject)">
      <xar:set name="mermaid">$xar->mod()->apiFunc('workflow', 'user', 'mermaid', ['workflow' => $workflow, 'subject' => $subject])</xar:set>
    <xar:else/>
      <xar:set name="mermaid">$xar->mod()->apiFunc('workflow', 'user', 'mermaid', ['workflow' => $workflow])</xar:set>
    </xar:if>
    <div class="mermaid">
      #$mermaid#
    </div>
  </div>
</xar:template>
